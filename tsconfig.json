{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
